<div class="room-index-size">

  <h4>検索結果：<%= @search_rooms.count %>件</h4>
  <div class="row-1">

    <% @search_rooms.each do |room| %>
      <div class="item-list">
        <div class="room-frame room-pad">
          <%= link_to room do %>
            <div class="room-image-frame">
              <%= image_tag room.image.url , class:"room-image"%>
            </div>
            <div class="room-profile">
              <p class="room-name"><%= room.name %></p>
              <p class="room-address"><%= room.address %></p>
              <p class="room-cost cost-icon"><%= room.cost %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
