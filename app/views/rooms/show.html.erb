<div class="container">
  <div class="room-show">
    <div class="row-1">
     <div class="room-show-left">
       <%= image_tag @room.image.url , class:"room-show-image"%>
       <div class="room-show-detile">
         <%= image_tag 'default.png', class:"icon" %>
         <div class="room-show-profile">
          <p class="room-profile-name"><%= @room.name %></p>
          <p class="room-profile-address"><%= @room.address %></p>
         </div>
       </div>
       <p class="room-profile-content"><%= @room.content %></p>
     </div>
     <div class="room-show-right">
       <div class="room-show-nav">
         <h5 class="cost-icon"><%= @room.cost %> / 日</h5>
         <div class="room-show-date">
          <%= form_for @reservation do |f| %>

           <%= f.hidden_field :room_id, value: @room.id %>
           <%= f.label :start_date ,"開始日" %>
           <%= f.date_field :start_date, class: 'form-control' %>
           <%= f.label :finish_date ,"終了日" %>
           <%= f.date_field :finish_date, class: 'form-control' %>
           <%= f.label :people_num ,"人数" %>
           <%= f.number_field :people_num, class: 'form-control' %>

           <%= f.submit "予約する", class: "btn btn-blue submit" %>
           <% end %>
         </div>
       </div>
     </div>
    </div>
  </div>
</div>
