<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="header-left">
    <%= link_to "Pote Share", root_path, class: "logo" %>
    <%= search_form_for @search, url: rooms_path do |f| %>
    <div class="header-search">
      <%= f.text_field :address_cont, :placeholder => "エリア", class:'form-control' %>
      <i class="map-marker"></i>
    </div>
    <div class="header-search">
      <%= f.text_field :name_or_address_or_content_cont, :placeholder => "キーワード", class:'form-control' %>
      <i class="search-icon"></i>
    </div>
    <%= f.submit class:'none-display' %>
  <% end %>
  </div>
  <nav>
    <ul class="nav navbar-nav navbar-right">
      <% if logged_in? %>
        <li class="name"><%= current_user.name %></li>
        <li class="dropdown">
          <div data-toggle="dropdown">
            <% if current_user.image? %>
              <%= image_tag current_user.image.url, class:"icon" %>
            <% else %>
              <%= image_tag 'default.png', class:"icon" %>
            <% end %>
          </div>
          <ul class="dropdown-menu">
            <li><%= link_to "ルーム登録", new_room_path, class:"menu" %></li>
            <li><%= link_to "予約済みルーム一覧", reservations_path, class:"menu" %></li>
            <li><%= link_to "登録済みルーム一覧", lend_path , class:"menu" %></li>
            <li><%= link_to "設定", current_user, class:"menu" %></li>
            <li><%= link_to "ログアウト", logout_path, method: :delete, class:"menu" %></li>
          </ul>
        </li>
      <% else %>
        <li><%= button_to "ログイン", {controller: 'sessions', action: 'new'}, {method: :get, class: "btn btn-blue" } %></li>
        <li><%= button_to "登録する", {controller: 'users', action: 'new'}, {method: :get, class: "btn btn-grey" } %></li>
      <% end %>
    </ul>
  </nav>
</header>
