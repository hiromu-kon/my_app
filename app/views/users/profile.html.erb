<div class="row-1">
  <div class="user-nav">
    <ul>
        <li class=""><%= link_to "アカウント", current_user %></li>
        <li class="active"><%= link_to "プロフィール", profile_user_path(current_user) %></li>
    </ul>
</div>
<div class="user-view">
  <div class="user-view-box">
    <%= form_for @user, url: profile_update_user_path do |f| %>
    <div class="update-content">
      <div class="row-1">
        <h5>プロフィール</h5>
      </div>
    </div>
    <div class="update-content">
      <div class="row-1">
            <% if @user.image? %>
              <%= image_tag @user.image.url, class:"icon" %>
            <% else %>
              <%= image_tag 'default.png', class:"icon" %>
            <% end %>
      </div>
    </div>
    <div class="update-content">
      <div class="row-1">
        <label class="label-column require">アイコン画像</label>
        <%= f.file_field :image %>
      </div>
    </div>
    <div class="update-content">
      <div class="row-1">
        <label class="label-column require">名前</label>
        <%= f.text_field :name, class: 'form-control', placeholder: "名前を入力" %>
      </div>
    </div>
    <div class="update-content">
      <div class="row-1">
        <label class="label-column require">自己紹介</label>
        <%= f.text_area :content, class: 'form-control', placeholder: "自己紹介を入力" %>
      </div>
    </div>
    <div class="update-content">
      <%= f.submit "更新", class: "btn btn-blue" %>
    </div>
  　<% end %>
  </div>
</div>
